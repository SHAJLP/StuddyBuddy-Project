<form action="/search" method="GET">
    <label for="query">Search:</label>
    <input type="text" id="query" name="query">
    <label for="category">Category:</label>
    <button type="submit">Search</button>
</form>
<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        {{> post-info post }}
        {{> comments post.comments}}
    </li>
    {{/each}}
</ul>